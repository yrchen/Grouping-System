			<% if upload == nil %>
				<hl style="color:#c10000">作業未繳交</hl>
				
			<% elsif upload.score != nil %>
				<%= upload.score %>
				
			<% elsif upload.score == nil %>	
				尚未公告成績
			<% end %>
		</p>
	<% end %>
	<br><hr size=2 align=center width=100%>
	
	<h3> Test </h3>
	<% tests.each do |a| %>
		<p>
			<%= a.title %>:&nbsp;&nbsp;
			
			<% upload = a.uploads.find_by_user_id(current_user.id) %>
			<% if upload == nil %>
				<hl style="color:#c10000">作業未繳交</hl>
				
			<% elsif upload.score != nil %>
				<%= upload.score %>
				
			<% elsif upload.score == nil %>	
				尚未公告成績
			<% end %>
		</p>
	<% end %>
	
<% end %>