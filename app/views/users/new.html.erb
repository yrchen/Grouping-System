<h2>教師 <span>註冊</span></h2>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h3>Form is invalid</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li><br><br>
        <% end %>
      </ul>
    </div>
  <% end %>
	
	<div class="field">
    <%= f.label :account %><br>
    <%= f.text_field :account %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
		
	<!-- avoid that student sign up -->
	<div>
		<br>邀請碼: &nbsp; <input type="password" id="invited_code">
	</div>
	
	<%= f.hidden_field :class_id, :value => "-1" %>
	
  <br><div class="actions"><%= f.submit '送出', :id => "check" %></div>
<% end %>

<script>
	$("#check").attr("disabled", true);
	$("#check").hide();
	
	//check invited code
	$("#invited_code").keyup(function()
	{
		if($(this).val() == "minemine")
		{
			$("#check").show("slow");
			$("#check").attr("disabled", false);
		}
		else
		{
			$("#check").hide();
			$("#check").attr("disabled", true);
		}
	});
</script>


