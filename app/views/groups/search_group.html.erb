<h2>查詢 <span>分組</span></h2>

<%= form_for @course, :url => {:action => "view_class"} do |f| %>
	<p class="inline">選擇課程: &emsp;<%= f.select :name, @course_list.map{ |c| [c.name] }, :prompt => "請選擇" %></p>
	<div class="actions">&emsp;<%= f.submit '查詢', :class => 'tsc_c3b_small tsc_button tsc_c3b_blue tsc_c3b_input' %></div>
<% end %>

